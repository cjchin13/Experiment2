#include <iostream>
#include <conio.h>

using namespace std;

int main()
{
	float num1, num2, num3;
	
	cout << "What is the first number? "; cin >> num1;
	cout << "What is the second number? "; cin >> num2;
	cout << "What is the third number? "; cin >> num3;
	
	if (num1 > num2 && num1 > num3)
		cout << num1 << " is the LARGEST number among the three";
	
	else if (num2 > num1 && num2 > num3)
		cout << num2 << " is the LARGEST number among the three";
	
	else
		cout << num3 << " is the LARGEST number among the three";
	
	_getch();
	return 0;
}
